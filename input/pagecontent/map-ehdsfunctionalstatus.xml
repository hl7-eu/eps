            <td>equivalent</td>
            <td>Observation</td>
            <td>effectiveDateTime</td>
            <td>Time of assessment</td>
            <td></td>
          </tr>
          <tr>
            <td>functionalStatusAssessment.functionalAssessmentResult[x]</td>
            <td>Functional assessment result value</td>
            <td>equivalent</td>
            <td>Observation</td>
            <td>value[x]</td>
            <td>Assessment result value</td>
            <td></td>
          </tr>
