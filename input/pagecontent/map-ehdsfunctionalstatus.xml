            <td>relatedConditions.condition</td>
            <td>Condition related to the functional status</td>
            <td>equivalent</td>
            <td>Condition</td>
            <td>code</td>
            <td>Condition code</td>
            <td></td>
          </tr>
          <tr>
            <td>relatedConditions.conditionText</td>
            <td>Textual description of the condition</td>
            <td>equivalent</td>
            <td>Condition</td>
            <td>code.text</td>
            <td>Textual description of the condition</td>
            <td></td>
          </tr>
          <tr>
            <td>relatedConditions.onsetDate</td>
            <td>Onset date of a condition</td>
            <td>equivalent</td>
            <td>Condition</td>
            <td>onsetDateTime</td>
            <td>Condition onset date/time</td>
            <td></td>
          </tr>

          <tr>
            <td>functionalStatusAssessment</td>
            <td>Functional assessment of the patient</td>
            <td>related-to</td>
            <td>Condition</td>
            <td>evidence.detail</td>
            <td>Reference to an Observation that captures the assessment</td>
            <td></td>
          </tr>
          <tr>
            <td>functionalStatusAssessment.functionalAssessmentDescription</td>
